<p style="color: green"><%= notice %></p>

<% content_for :title, "Posts" %>

<div class="mb-4">
  <%= link_to "Back to Home", root_path, class: "text-blue-500 hover:underline" %>
  <h1 class="text-2xl">Posts</h1>
</div>

<div id="posts">
  <% @posts.each do |post| %>
  <div class="post mb-4 p-4 border rounded">
    <%= render post %>
    <strong>Created at:</strong> <%= post.created_at.strftime("%B %d, %Y") %><br>
      <strong>Updated at:</strong> <%= post.updated_at.strftime("%B %d, %Y") %><br>
      <%= link_to "Show this post", post, class: "text-blue-500 hover:underline" %>
    </div>
  <% end %>
</div>

<%= link_to "New post", new_post_path %>
