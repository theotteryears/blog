<% content_for :title, "Posts" %>


<div class="bg-pink-50 p-8 rounded shadow w-full max-w-3xl text-center">

  <% if notice.present? %>
    <p class="text-green-600 mb-4"><%= notice %></p>
  <% end %>

  <h1 class="text-3xl mb-6">Posts</h1>

  <div class="flex justify-center space-x-4 mb-6">
    <%= link_to "New Post", new_post_path, class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
    <%= link_to "Back to Home", root_path, class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
  </div>

  <div id="posts" class="space-y-4">
    <% @posts.each do |post| %>
      <div class="bg-white p-4 border rounded shadow hover:shadow-lg transition">
        <%= render post %>
        <div class="text-sm text-gray-600">
          <strong>Created at:</strong> <%= post.created_at.strftime("%B %d, %Y") %><br>
          <strong>Updated at:</strong> <%= post.updated_at.strftime("%B %d, %Y") %>
        </div>
        <div class="mt-2">
          <%= link_to "Show this post", post, class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
        </div>
      </div>
    <% end %>
  </div>
</div>